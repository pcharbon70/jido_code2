{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jido Code",
  "version": "0.1.0",
  "identifier": "com.jido-code.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "jido_code_backend"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
